<% layout('layouts/boilerplate')%>

<div class="container justify-content-center align-items-center my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body p-3">
                    <h5 class="card-title mb-3">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="form-floating mb-3">
                            <input class="form-control" type="text" id="username" name="username" placeholder="Username" required autofocus>
                            <label class="form-label" for="username">Username</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-floating">
                            <input class="form-control mb-3" type="email" id="email" name="email" placeholder="Email" required>
                            <label for="email">Email</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" type="password" id="password" name="password" placeholder="Password" required>
                            <label for="password">Password</label>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-block">Sign up</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
