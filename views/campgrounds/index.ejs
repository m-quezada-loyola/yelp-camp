
<% layout('/layouts/boilerplate') %>
<div class="mb-3" id="cluster-map"></div>
<div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
<% for (let campground of campgrounds) { %>
    <div class="col">
        <div class="card h-100">
            <% if (campground.images.length) { %>
                <img class="img-index" alt="" src="<%= campground.images[0].url %>">
            <% } else { %>
                <img class="img-index" alt="" src="https://res.cloudinary.com/dpvtarguc/image/upload/v1703024889/YelpCamp/whflf0xz1rm2eiphayan.jpg">
            <% } %>
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
                <p class="text-muted"><%= campground.location %></p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
            </div>
        </div>
    </div>
<% } %>
</div>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    let campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>

