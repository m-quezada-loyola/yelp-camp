<% layout('/layouts/boilerplate') %>
<div class="container justify-content-center align-items-center my-5">
  <div class="row">
    <div div class="col-md-8 offset-md-2 col-xl-4 offset-xl-4">
        <div class="mb-3">
        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">Back to Campground</a>
        </div>
      <div class="card shadow p-3">
        <div class="card-body">
          <h5 class="card-title-xs mb-3">Edit campground</h5>
          <form
            action="/campgrounds/<%= campground._id %>?_method=PUT"
            method="POST"
            class="validated-form"
            enctype="multipart/form-data"
            novalidate
          >
            <div class="form-floating mb-3">
              <input
                class="form-control"
                type="type"
                id="title"
                name="campground[title]"
                value="<%= campground.title %>"
                placeholder="Title"
                required
              />
              <label class="form-label" for="title">Title</label>

              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="form-floating mb-3">
              <input
                class="form-control"
                type="text"
                id="location"
                name="campground[location]"
                value="<%= campground.location %>"
                placeholder="Location"
                required
              />
              <label class="form-label" for="location">Location</label>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="price-label">$</span>
              <div class="form-floating">
                <input
                  type="text"
                  class="form-control"
                  id="price"
                  name="campground[price]"
                  placeholder="Price"
                  aria-describedby="price-label"
                  value="<%= campground.price %>"
                  required
                />
                <label for="price" class="form-label">Price</label>
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>
            <div class="form-floating mb-3">
              <textarea
                type="text"
                class="form-control"
                id="description"
                name="campground[description]"
                placeholder="Description"
                required
              >
<%= campground.description %></textarea
              >
              <label for="image" class="form-label">Description</label>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Add images</label>
              <input
                class="form-control"
                type="file"
                id="image"
                name="image"
                multiple
              />
            </div>
            <% campground.images.forEach((image, i) => { %>
            <div class="mb-3">
              <img
                src="<%= image.thumbnail %>"
                class="rounded mx-auto d-inline"
                alt=""
              />
              <div class="form-check d-inline">
                <input
                  type="checkbox"
                  id="<%= i %>"
                  name="deleteImages[]"
                  value="<%= image.filename %>"
                />
                <label for="<%= i %>">Delete?</label>
              </div>
            </div>
            <% }) %>

            <div class="d-grid gap-5">
              <button type="submit" class="btn btn-success">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
